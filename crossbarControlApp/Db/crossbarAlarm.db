#This is an alarm summary PV for the crossbar. 
#This record should be update it if TCRB number increments.
record(calc, "$(DEV,undefined):CROSSBAR_STATSUMY")
{
     field(DESC, "Crossbar control alarm sum")
     field(SCAN, "1 second")
     field(CALC, "A+B+C+D")
     field(INPA, "$(DEV,undefined):TCRB0:OUTPUTCONFIG.SEVR MS")
     field(INPB, "$(DEV,undefined):TCRB1:OUTPUTCONFIG.SEVR MS")
     field(INPC, "$(DEV,undefined):TCRB2:OUTPUTCONFIG.SEVR MS")
     field(INPD, "$(DEV,undefined):TCRB3:OUTPUTCONFIG.SEVR MS") 
}

